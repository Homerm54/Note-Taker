{{# if authenticated}}

<div class="container">
  <div class="row mt-5">
    <div class="col">
      <h1 class="h3">You're already logged In!</h1>
    </div>
  </div>
  <div class="row">
    <div class="col pt-3">
      <p>Looking for <a class="text-primary" href="#" role="button">logging out?</a></p>
    </div>
  </div>
</div>

{{else}}
<script type="text/javascript" src="/assetsvendor/socket.io/socket.io.js"></script>
<script type="text/javascript" src="/static/javascripts/loginScript.js"></script>

<div class="container-fluid align-content-center">
  <div class="py-5">
    <div class="row">
      <div class="col d-flex justify-content-center align-content-end">
        <span><i class="fa fa-hat-wizard h1 toggleHide" aria-hidden="true"></i></span>
      </div>
    </div>
    <h1 class=" h3 text-center spaceMe3px">Log In to start the magic</h1>
  </div>
  <div class="row px-3 px-sm-3">
    <div class="col">
    </div>
    <div class="col-sm-6 col-12 border border-dark py-5 rounded shadow-lg">
      <form class="col justify-content-center" method="post" action="" id="form">
        <div class="form-group row px-2 py-2">
          <label for="username" class="col-2 form-control-label mx-0 px-0 text-center mb-0 pt-2"><i class="fa fa-user" aria-hidden="true"></i></label>
          <div class="col-10 pl-0">
            <input type="text" class="form-control" id="username" name="username" placeholder="awesomeUsernameHere">
            <div id="usernameFeedback">

            </div>
          </div>
        </div>
        <div class="form-group row px-2 py-2">
          <label for="password" class="col-2 form-control-label mx-0 px-0 text-center mb-0 pt-2"><i class="fa fa-key" aria-hidden="true"></i></label>
          <div class="col-10 pl-0">
            <input type="password" class="form-control" id="password" name="password" placeholder="Password">
            <div id="passwordFeedback">

            </div>
          </div>
        </div>
        <div class="form-group row pt-3 mb-0 px-3">
          <div class="col">
            <button type="submit" class="btn btn-outline-primary">Log in</button>
          </div>
          <div class="col d-flex justify-content-end">
            <a class="btn btn-outline-primary" href="/signup">Sign Up</a>
          </div>
        </div>
      </form>
    </div>
    <div class="col">
    </div>
  </div>
</div>

{{/if}}
